@model dynamic

@{
    Layout = "_Layout";
}

<table class="w3-table-all">
    <tr>
        <th>Post Name</th>
        <th>ID</th>
        <th>Actions</th>
    </tr>
    @{
        var blogController = new PostDatabaseModel();
        var postIdList = PostDatabaseModel.GetPostIdList();
        postIdList.Reverse();
        var enumerator = postIdList.GetEnumerator();
        @while(enumerator.MoveNext())
        {
            var postId = enumerator.Current;
            var post = PostDatabaseModel.GetPostById(postId);
            <tr>
                <td>@post.Title</td>
                <td>@post.Id</td>
                <td><a href="/Posts/Edit/@post.Id">Edit</a>&nbsp;|&nbsp;<a href="Posts/Delete/@post.Id">Delete</a></td>
            </tr>
        }
    }
</table>

