@model List<Posts> 

@{
    Layout = "_Layout";
    ViewData["Title"] = "Posts";
}
<table class="table table-bordered is-fullwidth is-striped is-hoverable">
    <thead class="has-background-black">
    <tr>
        <th class="has-text-white">ID</th>
        <th class="has-text-white">Username</th>
        <th class="has-text-white">Post Name</th>
        <th class="has-text-white">Actions</th>
    </tr>
    </thead>
    <tbody>
    @{
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Author.Name</td>
                <td>@p.Title</td>
                <td><a class="no-ul is-primary" asp-action="View" asp-route-id="@p.Id">View</a> | <a class="no-ul is-warning" href="/Post/Edit/@p.Id">Edit</a>&nbsp;|&nbsp;<a class="no-ul is-danger"href="/Post/Delete/@p.Id">Delete</a></td>
            </tr>
        }
    }
    </tbody>
</table>