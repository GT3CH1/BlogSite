@using BlogSite.Controllers
@model List<Posts> 
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<div class="w3-row w3-margin">
    <div>
        <form href="/">
            <input type="text" class="w3-input w3-border w3-round w3-threequarter" name="search" id="search" placeholder="Search..."/>
            <input type="submit" class="w3-button w3-blue w3-round w3-right" id="searchButton" value="Search"/>
        </form>
    </div>
    @{
        Model.Reverse();
        @foreach (var post in Model)
        {
            <div class="w3-panel w3-card-2 w3-moble w3-round-large w3-white w3-padding-16 w3-left w3-col w3-cell-middle w3-rest post w3-animate-zoom">
                <div style="max-width: 500px;">
                    <a href="Post/View/@post.Id" class="no-ul w3-text-black w3-large w3-button w3-hover-blue-gray title">
                        <h3>@post.Title</h3>
                    </a>
                </div>
                <hr/>
                <br/>
                <span class="w3-left w3-medium w3-text-gray w3-margin-left">
                    @HomeController.StripHtmlTags(post.Content.Substring(0, Math.Min(post.Content.Length, 500)))
                </span>
                <br/>
                <br/>
            </div>
        }
    }
</div>
