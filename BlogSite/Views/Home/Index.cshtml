@using BlogSite.Data
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
@{
    var postIdList = PostDatabaseModel.GetPostIdList();
    postIdList.Reverse();
    @for (int count = 0; count < postIdList.Count; count++)
    {
        var postId = postIdList[count];
        var post = PostDatabaseModel.GetPostById(postId);
        <div class="w3-row">
            <div class="w3-panel w3-card-2 w3-moble w3-white w3-padding-16 w3-left w3-col w3-cell-middle">
                <a href="Posts/View/@postId">
                    <span>
                        @post.Title
                    </span>
                </a>
                <br/>
                &nbsp;
                <span class="w3-left w3-large">
                    @{
                        @PostDatabaseModel.StripHtmlTags(post.Content.Substring(0, Math.Min(post.Content.Length, 500)))
                    }
                </span>
            </div>
        </div>
    }
}