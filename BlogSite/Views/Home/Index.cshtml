@using BlogSite.Controllers
@model List<Posts> 
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
    var data = (string)ViewBag.search;
    var searchValue = (data == null) ? string.Empty : data;
}
<div class="mx-0 row">
    <div class="mb-4">
        <form href="/">
            <div class="row">
                <input type="submit" class="btn btn-secondary col-md-2" id="searchButton" value="Search"/>
                <input type="text" class="col-md-10" name="search" id="search" placeholder="Search..." value="@searchValue"/>
            </div>
        </form>
    </div>
    @{
        Model.Reverse();
        @foreach (var post in Model)
        {
            <div class="col-md-12 rounded card p-4">
                <a href="Post/View/@post.Id" class="no-ul text-black">
                    <div style="max-width: 500px;">
                        <h3>@post.Title</h3>
                    </div>
                    <hr/>
                    <br/>
                    <span class="w3-left w3-medium w3-margin-left">
                        @HomeController.StripHtmlTags(post.Content.Substring(0, Math.Min(post.Content.Length, 500)))
                    </span>
                    <br/>
                    <br/>
                </a>
            </div>
        }
    }
</div>
