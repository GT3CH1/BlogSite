<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    @* <title>@ViewData["Title"] - BlogSite</title> *@
    <link rel="stylesheet" href="/css/prism.css" type="text/css"></link>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/w3.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/BlogSite.styles.css" asp-append-version="true"/>
    <script src="/js/prism.js"></script>

    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/> *@
</head>
<body>
<header>
    <nav class="navbar-expand-sm navbar-toggleable-sm w3-black w3-large w3-center">
        <div class="">
            @* <button class="navbar-toggler w3-black" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" *@
            @*         aria-expanded="false" aria-label="Toggle navigation"> *@
            @*     <span class="navbar-toggler-icon"></span> *@
            @* </button> *@
            <div class="w3-centered">
                <a class="w3-button w3-black w3-hover-blue " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                @* <li class="nav-item"> *@
                @*     <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
                @* </li> *@
                @* // For the love of god this needs to get changed. *@
                @{
                    var principal = User.IsInRole("Admin");
                    if (principal)
                    {
                        <a class="w3-button w3-black w3-hover-blue " asp-area="" asp-controller="Post" asp-action="Index">Posts</a>
                        <a class="w3-button w3-black w3-hover-blue " asp-area="" asp-controller="Post" asp-action="Create">Create Post</a>
                    }
                }
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        <br/>
        <br/>
        <div class="w3-row">
            <div class="w3-container w3-quarter w3-mobile" style="width:12.5%!important;"></div>
            <div class="w3-threequarter w3-container w3-mobile">
                @RenderBody()
            </div>
            <div class="w3-container w3-quarter" style="width:12.5%!important;"></div>

        </div>
    </main>
</div>
<br/>
<br/>
<footer class="border-top footer text-muted">
    <div class="w3-container  w3-margin-left">
        &copy; 2022 - Gavin C. Pease
    </div>
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>