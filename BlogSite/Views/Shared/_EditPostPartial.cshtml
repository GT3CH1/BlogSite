<div class="w3-container">
    <form method="POST">
        <div class="w3-row w3-padding-small">
            <input asp-for="Title" type="text" style="width:100%">
        </div>
        <div class="w3-row w3-padding-small">
            @* <link href="/css/prism.css" rel="stylesheet" type="text/css" /> *@
            <script src="/js/prism.js" data-manual></script>
            <textarea id="content" asp-for="Content">
            </textarea>
        </div>
        <input type="submit" class="w3-button w3-blue w3-round-medium" value="Submit"></input>
        <label class="w3-margin-left"> Draft? </label>
        <input type="checkbox" class="w3-check" asp-for="IsDraft">
        <br/>
        <br/>
    </form>
</div>