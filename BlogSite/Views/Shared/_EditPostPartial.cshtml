@model Posts
@{
    var title = "A really cool title.";
    var content = "Some awesome content";
    var isDraft = true;
    if (Model is not null)
    {
        title = Model.Title;
        content = Model.Content;
        isDraft = Model.IsDraft;
    }
    ViewData["Title"] = title;
}
