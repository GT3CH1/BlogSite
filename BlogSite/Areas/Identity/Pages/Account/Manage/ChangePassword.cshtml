@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage"/>
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="is-danger message"></div>
            <div class="field">
                <label asp-for="Input.OldPassword" class="label"></label>

                <input asp-for="Input.OldPassword" class="input is-primary" autocomplete="current-password" aria-required="true"/>
                <span asp-validation-for="Input.OldPassword" class="is-danger message"></span>
            </div>
            <div class="field">
                <label asp-for="Input.NewPassword" class="label"></label>
                <input asp-for="Input.NewPassword" class="input is-primary" autocomplete="new-password" aria-required="true"/>
                <span asp-validation-for="Input.NewPassword" class="is-danger message"></span>
            </div>
            <div class="field">
                <label asp-for="Input.ConfirmPassword" class="label"></label>
                <input asp-for="Input.ConfirmPassword" class="input is-primary" autocomplete="new-password" aria-required="true"/>
                <span asp-validation-for="Input.ConfirmPassword" class="is-danger message"></span>
            </div>
            <button type="submit" class="button is-rounded is-primary">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
