@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<h1>@ViewData["Title"]</h1>

<section>
    <form id="account" method="post">
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="field">
            <label asp-for="Input.Email" class="label"></label>
            <div class="control has-icons-left">
                <input asp-for="Input.Email" class="input" autocomplete="username" aria-required="true"/>
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
            </div>
            <span asp-validation-for="Input.Email" class="is-warning"></span>
        </div>

        <br/>
        <div class="field">
            <label asp-for="Input.Password" class="label"></label>
            <input asp-for="Input.Password" class="form-control  input" autocomplete="current-password" aria-required="true"/>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <br/>
        <div class="field">
            <div class="checkbox">
                <label asp-for="Input.RememberMe" class="label">
                    <input class="checkbox" asp-for="Input.RememberMe"/>
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="field">
            <button id="login-submit" type="submit" class="button is-rounded is-primary">Log in</button>
        </div>
        <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>
        </div>
    </form>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}